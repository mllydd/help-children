{% macro table(users) %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Имя</th>
            <th scope="col">Фамилия</th>
            <th scope="col">E-mail</th>
            <th scope="col">Возраст</th>
            <th scope="col">Телефон</th>
            <th scope="col">Дата регистрации</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.birthday|date('Y.m.d') }}</td>
                <td>{{ user.Phone }}</td>
                <td>{{ user.CreatedAt|date('Y.m.d H:i') }}</td>
                <td><a href="/panel/users/{{ user.id }}">Изменить</a></td>
                <td><a href="/panel/users/{{ user.id }}/delete">Удалить</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endmacro %}
