{% macro table(documents) %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Название</th>
            <th scope="col">Категория</th>
            <th scope="col">Описание</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <th scope="row">{{ document.id }}</th>
                <td>{{ document.title }}</td>
                <td>{{ document.category }}</td>
                <td>{{ document.description }}</td>
                <td><a href="/panel/documents/{{ document.id }}">Изменить</a></td>
                <td><a href="/panel/documents/{{ document.id }}/delete">Удалить</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endmacro %}
