{% extends 'base_client_wrapper.twig' %}

{% block title %}БФ “Помогите Детям” | Документация{% endblock %}
{% block desciption %}БФ “Помогите Детям” | Документация{% endblock %}
{% block keywords %}Документация{% endblock %}

{% block content %}
    <main>
        <section class="section hero-small">
            <div class="container">
                <h1 class="hero-small__title">Документация</h1>
                <p class="hero-small__subtitle">Благодарим Вас за помощь детям!</p>
            </div>
        </section>
        <section class="section reports docs">
            <div class="container container-pagecontent-padding">
                <h2 class="section-title">Учредительные документы</h2>
                <div class="reports-content">
                    <ul class="report-list">
                        {% for document in documents %}
                            <li class="report-list__item">
                                <div class="report">
                                    <div class="report-doc">
                                        <img class="report-doc__image" src="/images/doc-example.png" alt="Документ" width="208" height="250">
                                        <a class="show-doc-button" href="{{ document.file }}" target="_blank">
                                            <span class="show-doc-button__circle"><span class="icon icon-doc"></span></span>
                                        </a>
                                    </div>
                                    <div class="report-description">
                                        <h3 class="report-description__title">{{ document.title }}</h3>
                                        <div class="report-description__download">
                                            <a class="report-description__download-link" target="_blank" href="{{ document.file }}">Скачать</a>
                                        </div>
                                        <div class="report-description__size">97 кб.</div>
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="container container--small">
                    <div class="donate-form-wrapper reports-donate-form-wrapper">
                        {% include 'components/donate_form.twig' %}
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
