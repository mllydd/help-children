{% block content %}
    <main>
        <section class="section hero-large">
            <div class="container">
                <h1 class="hero-large__title">SMS</h1>
                <p class="hero-large__subtitle">Пожертвование с помощью мобильного телефона</p>
            </div>
        </section>
        <div class="bg-purple-line"></div>
        <section class="section contacts section-with-bghearts">
